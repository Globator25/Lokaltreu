{
  "name": "@lokaltreu/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "prestart:test": "npm run build",
    "start:test": "cross-env NODE_ENV=test PORT=3001 node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run tests/contract",
    "test:parallel": "vitest run tests/parallel",
    "test:parallel:ci": "cross-env VITEST_COVERAGE=false vitest run tests/parallel",
    "test:device-proof:ci": "cross-env VITEST_COVERAGE=false vitest run src/security/device/verifyDeviceProof.spec.ts",
    "test:problem-json:ci": "cross-env VITEST_COVERAGE=false vitest run src/middleware/errors/globalErrorHandler.spec.ts",
    "test:security:replay": "cross-env VITEST_COVERAGE=false vitest run \"src/security/replay/**/*.spec.ts\"",
    "test:security:device-proof": "npm run test:device-proof:ci",
    "test:security:plan-gate": "cross-env VITEST_COVERAGE=false vitest run \"src/security/plan/**/*.(spec|test).ts\""
  },
  "dependencies": {
    "@lokaltreu/config": "^0.1.0",
    "@lokaltreu/types": "^0.1.0",
    "@noble/ed25519": "^2",
    "@opentelemetry/api": "^1",
    "@upstash/redis": "^1",
    "express": "^4",
    "tweetnacl": "^1"
  },
  "devDependencies": {
    "@types/express": "^4",
    "@vitest/coverage-v8": "^4.0.7",
    "chai": "^6.2.0",
    "chai-openapi-response-validator": "^0.14.2",
    "cross-env": "^10.1.0",
    "vitest": "^4.0.7"
  }
}
