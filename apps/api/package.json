{
  "name": "@lokaltreu/api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:security:replay": "vitest run src/mw/__tests__/idempotency-http.spec.ts src/mw/__tests__/idempotency-conflict.spec.ts src/mw/__tests__/idempotency-replay-policy.spec.ts src/mw/__tests__/idempotency-retry.spec.ts",
    "test:security:device-proof": "vitest run src/device-auth.spec.ts src/device-auth.http.spec.ts",
    "test:security:plan-gate": "vitest run tests/plan",
    "test:plan": "vitest run tests/plan",
    "test:plan:file": "vitest run",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:test": "node --input-type=module -e \"process.env.PORT='3001'; const { spawn } = await import('node:child_process'); const child = spawn(process.execPath, ['./dist/index.js'], { stdio: 'inherit', env: process.env }); child.on('exit', (code) => process.exit(code ?? 0));\"",
    "lint": "eslint .",
    "dev": "node --loader ts-node/esm --watch src/index.ts",
    "gdpr:dsr": "vitest run tests/dsr/dsr.http.spec.ts",
    "audit:export:worm": "node --loader ts-node/esm src/jobs/audit-export-worm.ts",
    "audit:monitor:gap": "node --loader ts-node/esm src/jobs/audit-export-gap-check.ts",
    "audit:retention:worm": "node --loader ts-node/esm src/jobs/audit-retention-worm.ts",
    "dev:harness:referrals": "node --import \"data:text/javascript,import { register } from 'node:module'; import { pathToFileURL } from 'node:url'; register('ts-node/esm', pathToFileURL('./'));\" src/dev-referrals-harness.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "dependencies": {
    "@lokaltreu/types": "file:../../packages/types",
    "@upstash/redis": "^1.36.0",
    "husky": "^9.1.7",
    "jose": "^5.10.0",
    "libsodium-wrappers": "^0.7.15",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^5.14.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chai": "^4.4.1",
    "chai-openapi-response-validator": "^0.14.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.52.0",
    "vitest": "^3.2.4"
  }
}
