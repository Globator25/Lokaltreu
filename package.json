{
  "name": "lokaltreu",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:web": "npm -w apps/web run build",
    "build:api": "npm -w apps/api run build",
    "build": "npm run build:web && npm run build:api",
    "dev": "powershell -NoProfile -Command \"$env:LOKALTREU_API_UPSTREAM='http://127.0.0.1:3001'; npm -w apps/web run dev\"",
    "dev:mock": "concurrently --kill-others-on-fail -n PRISM,WEB \"npm --workspaces=false run mock:api:4013\" \"powershell -NoProfile -Command \\\"$env:LOKALTREU_API_UPSTREAM='http://127.0.0.1:4013'; npm -w apps/web run dev\\\"\"",
    "prelint": "node ./scripts/gen-openapi-types.mjs",
    "lint": "npm run lint -w apps/api && npm run lint -w apps/web",
    "start:web": "node apps/web/.next/standalone/server.js",
    "start:api": "node apps/api/dist/server-main.js",
    "agents:sentinel:node": "node scripts/agents-sentinel-check.mjs",
    "agents:sentinels": "npm run -s agents:sentinel:node",
    "contract:check": "node scripts/contract-check.mjs",
    "contract:drift-check": "npm run contract:check",
    "contract:drift:check": "npm run contract:drift-check",
    "problemjson:check": "vitest run -t RFC7807",
    "test:with-stub": "cross-env STUB=1 vitest run --coverage",
    "prepare": "husky install",
    "scan:logs:no-pii": "node scripts/gdpr/scan-logs-no-pii.mjs",
    "security:api:start": "node apps/api/src/dev-server.js --port=4010 --profile=test",
    "test:security:anti-replay": "node scripts/security/anti-replay.mjs",
    "test:security:replay": "npm run -w apps/api test -- src/mw/__tests__/idempotency-http.spec.ts src/mw/__tests__/idempotency-conflict.spec.ts src/mw/__tests__/idempotency-replay-policy.spec.ts src/mw/__tests__/idempotency-retry.spec.ts",
    "test:security:device-proof": "npm run -w apps/api test -- src/device-auth.spec.ts src/device-auth.http.spec.ts",
    "test:security:plan-gate": "npm run -w apps/api test -- tests/plan",
    "test:plan": "npm --workspaces=false -w apps/api run test:plan",
    "test:plan:file": "npm --workspaces=false -w apps/api run test --",
    "mock:api": "powershell -NoProfile -Command \"$spec=(Resolve-Path 'apps/api/openapi/lokaltreu-openapi-v2.0.yaml').Path; npx @stoplight/prism-cli mock $spec -p 4010\"",
    "mock:api:4013": "powershell -NoProfile -Command \"$spec=(Resolve-Path 'apps/api/openapi/lokaltreu-openapi-v2.0.yaml').Path; npx @stoplight/prism-cli mock $spec -p 4013\"",
    "prism:mock": "node ./scripts/prism-mock.mjs",
    "prism:mock:4012": "set PRISM_PORT=4012&& node ./scripts/prism-mock.mjs",
    "prism:mock:4013": "set PRISM_PORT=4013&& node ./scripts/prism-mock.mjs",
    "prism:smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/prism-smoke.ps1 -StartPrism -Port 4013",
    "types:gen": "openapi-typescript apps/api/openapi/lokaltreu-openapi-v2.0.yaml -o packages/types/src/index.d.ts",
    "gdpr:docs:present": "test -f docs/compliance/step-18-device-onboarding.md",
    "test": "vitest run",
    "gdpr:dsr": "npm -ws run gdpr:dsr",
    "gdpr:logs": "node ./tools/gdpr/log-pii-retention.cjs",
    "enforce:coverage": "vitest run --coverage",
    "terraform:ci": "cd infra/terraform && terraform fmt -check && terraform init -backend=false -upgrade && terraform validate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20 <23"
  },
  "description": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.4",
    "@stoplight/prism-cli": "^5.14.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "glob": "^10.5.0",
    "husky": "^9.1.7",
    "k6": "^0.0.0",
    "openapi-typescript": "^6.7.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  }
}
